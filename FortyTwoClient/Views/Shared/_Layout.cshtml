@using FortyTwoLib

<!DOCTYPE html>
<html>
<head>
    <title>42 Now Online Dominoes - @ViewBag.Title</title>
	<link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
	@RenderSection("Styles", required: false)
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.iphoneui.js")" type="text/javascript"></script>
	<meta name="google-site-verification" content="UbFzJTa1BSBdiBka_uXNACMZDAhrIJkMvUIXwSjzpvE" />
	<META name="y_key" content="04ba54e02ca6d8a4" />
</head>

<body>
    <div class="page">

        <div id="header" style="border-bottom: 1px #5C87B2 solid;" >
			<div style="float: left">
				@Html.ActionLink("Home", "Index", "Home", null, new { @class="SiteImage" })
			</div>
			<div style="float: left; margin-left: 5px;">
				<div id="title" style="margin-top: -10px; margin-left: -15px; margin-right: 15px;" >
					<h1>Online Dominoes</h1>
				</div>

				<div id="menucontainer" style="margin-left: 25px;" >

					<ul id="menu">
@if ( HttpContext.Current.User.Identity.IsAuthenticated && HttpContext.Current.User.IsInRole("Admin") )
{
						<li>@Html.ActionLink("Admin", "Index", "Admin")
							<ul id="submenu">
								<li>@Html.ActionLink("Admin", "Index", "Admin")</li>
								<li>@Html.ActionLink("Reset", "Reset", "Admin")</li>
							</ul>
						</li>
}
						<li>@Html.ActionLink("Home", "Index", "Home")</li>
						<li>@Html.ActionLink("Stats", "", "Stats")</li>
						<li>@Html.ActionLink("Play", "", "Game")
							<ul id="submenu">
								<li>@Html.ActionLink("Game", "", "Game")</li>
								<li>@Html.ActionLink("Hand", "Hand", "Game")</li>
								<li>@Html.ActionLink("Reset", "Reset", "Game")</li>
							</ul>
						</li>
						<li>@Html.ActionLink("About", "About", "Home")</li>
					</ul>

				</div>
			</div>
			<div id="topPlayers" style="float: left; margin-left: 10px">
				@Html.Partial("_TopRated", new FortyTwoClient.Models.StatsModel())
			</div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

			<div style="clear: both"></div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer" >
            </div>
        </div>
    </div>
</body>
</html>
